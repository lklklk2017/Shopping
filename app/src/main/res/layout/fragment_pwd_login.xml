<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.nwt.application.fragment.loginfragments.PwdLoginFragment">
    <LinearLayout
        android:id="@+id/layout_logi"
        android:padding="20dp"
        android:layout_below="@id/line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/img_mobilephone"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_call"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/ed_telNumber"
                android:gravity="center_vertical"
                android:hint="请输入邮箱或者手机号码"
                android:inputType="number"
                android:layout_toRightOf="@id/img_mobilephone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/img_code"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_lock_lock"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/ed_code"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="number"
                android:layout_toRightOf="@id/img_code"
                android:layout_toLeftOf="@id/btn_sendCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
