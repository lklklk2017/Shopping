<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf4ebeb"
    tools:context="com.qf.nwt.application.fragment.Me">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:background="@mipmap/wuliyuner"
                    android:padding="16dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/img_setting"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:src="@mipmap/ic_set"
                        />
                    <ImageView
                        android:id="@+id/img_msg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/ic_infor"
                        android:layout_alignParentRight="true"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_head"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        app:civ_border_width="1dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="未登录"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_centerHorizontal="true"
                        android:text="搭配心得..."
                        />
                </RelativeLayout>
                <LinearLayout
                    android:background="#fff"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_match"
                            android:text="搭配"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_like"
                            android:text="喜爱"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_focus"
                            android:text="关注"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_focus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_fans"
                            android:text="粉丝"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="我的订单"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:id="@+id/layout_all_order"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_order"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_allorders"
                            />
                        <TextView
                            android:layout_below="@id/img_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="所有订单"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_wait_pay"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_pay"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_waitpay"
                            />
                        <TextView
                            android:layout_below="@id/img_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="待支付"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_underway"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_underway"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_underway"
                            />
                        <TextView
                            android:layout_below="@id/img_underway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="进行中"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_completed"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_complete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_finish"
                            />
                        <TextView
                            android:layout_below="@id/img_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="已完成"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:id="@+id/layout_collection"
                    android:background="#fff"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_collection"
                        android:text="我的收藏"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_next_"/>
                </RelativeLayout>
                <RelativeLayout
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_discount"
                        android:text="优惠券"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_next_"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_online"
                        android:text="在线客服"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_next_"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
