<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    >

    <!--special右布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <!--图片-->
        <ImageView
            android:id="@+id/img_specialright"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_launcher" />

        <!--透明图片-->

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#00000000"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/spical"
            >
            <!--title-->
            <TextView
                android:id="@+id/tv_title_specialright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rightspecial_title"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                />
            <!--desc-->
            <TextView
                android:id="@+id/tv_desc_specialright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/rightspecial_desc" />

        </LinearLayout>
        </android.support.v7.widget.CardView>



    </RelativeLayout>

</android.support.v7.widget.CardView>
